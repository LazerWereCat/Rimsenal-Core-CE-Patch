			<dropsCasings>true</dropsCasings>
		</projectile>
	</ThingDef>


	<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseSpikeYPBullet">
		<defName>Bullet_SpikeYP_CC</defName>
		<label>7.62x55mm YP bullet (CC)</label>
